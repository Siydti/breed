page {
	height: 100%;
	width: 100%;
}
.deposit {
	width: 100%;
	height: 100%;
	background: #F2F2F2;
	padding-top: 20rpx;
}
.deposit_main{
	width: 605rpx;
	height: 400rpx;
	background-color: #FFFFFF;
	padding: 20rpx 30rpx 10rpx 30rpx;
	margin:auto;
	color: #000000;
	font-size: 20rpx;
}
.price{
	color: #666666;
	font-size: 30rpx;
	margin: 20rpx 0px 80rpx 125rpx;
}
.input_box{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	border-bottom: 1rpx solid #ccc;
	margin-bottom: 27rpx ;
	padding-bottom: 10rpx;
	padding-left: 30rpx;
}
.input_box text{
	font-size: 36rpx;
	font-weight: 500;
	color: #010101;
	margin-right: 30px;
}
.all_btn{
	color: #06C474;
	margin-bottom: 20rpx;
}
.deposit_btn{
	margin: 20rpx auto;
	color: #fff;
	font-size: 28rpx;
	text-align: center;
	width: 338rpx;
	line-height: 64rpx;
	background-color: #06C474;
}
.deposit_hint{
	text-align: center;
	color: #999999;
	font-size: 20rpx;
}

