page{
	height: 100%;
	width: 100%;
}
.transactionRecord{
	width: 100%;
	height: 100%;
	background-color: #f2f2f2;
}
.transactionRecord_title{
	height: 80rpx;
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	color: #333;
	font-size: 26rpx;
	background-color: #fff;
	text-align: center;
}
.transactionRecord_title_active{
	color: #06C474;
	font-size: 28rpx;
}
.transactionRecord_title_active::after{
	content: '';
	display: block;
	height: 4rpx;
	width: 98rpx;
	background-color: #06C474;
	position: relative;
	bottom: -12rpx;
	left: 50%; -webkit-transform: translateX(-50%); transform: translateX(-50%);
}
.payDetail_list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 10px 26rpx;
	border-bottom: 1px solid #E8E8E8;
	background-color: #fff;
}
.payDetail_list_right{
	text-align: right;
}
.payDetail_list_left_money,.payDetail_list_right_ucceed{
	font-size: 26rpx;
	color: #6D6D6D;
	margin-bottom: 5px;
}
.payDetail_list_left_type,.payDetail_list_right_time{
	font-size: 18rpx;
	color: #D8D8D8;
}

/*样式的width和height一定要与定义的cWidth和cHeight相对应*/
.qiun-columns{
	margin-top: 30rpx;
}
.qiun-charts {
	width: 750rpx;
	height: 500rpx;
	background-color: #f2f2f2;
}
.charts {
	width: 750rpx;
	height: 500rpx;
	background-color: #f2f2f2;
}

